<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_2sdp"
    app:cardMaxElevation="@dimen/_16sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/adapter_transaction_currency_icon"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/ripple" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_3sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp">


                <TextView
                    android:id="@+id/adapter_transaction_currency_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableEnd="@drawable/ic_sent"
                    android:drawableRight="@drawable/ic_sent"
                    android:gravity="start|center_vertical"
                    android:text="Ripple"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/adapter_transaction_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableTint="@color/yellow"
                    android:gravity="start|center_vertical"
                    android:text="0.005"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_15sdp" />


                <TextView
                    android:id="@+id/adapter_transaction_currency_short_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/adapter_transaction_currency_full_name"
                    android:layout_alignStart="@id/adapter_transaction_currency_full_name"
                    android:layout_alignLeft="@id/adapter_transaction_currency_full_name"
                    android:layout_weight="4"
                    android:gravity="start|center_vertical"
                    android:text="XRP"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/adapter_transaction_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/adapter_transaction_amount"
                    android:layout_alignBottom="@id/adapter_transaction_currency_short_name"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="2021-05-23"
                    android:textColor="@color/light_green"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>


        </LinearLayout>

        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="0.7dp"
             android:layout_marginTop="@dimen/_5sdp"
             android:background="@color/color_theme" /> -->


    </LinearLayout>


</androidx.cardview.widget.CardView>