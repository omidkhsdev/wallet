<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="hintTextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolbarTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/texts_color</item>
    </style>

    <style name="PublicKeyStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TabTextStyle"  parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">

        <!-- Define color properties as desired -->

        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:textColorHighlight">@color/texts_color</item>

        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/red_btn_register_clicked</item>
        <!-- Define window properties as desired -->

        <item name="android:width">@dimen/_250sdp</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>

        <item name="android:windowIsFloating">true</item>

        <item name="android:windowCloseOnTouchOutside">false</item>

    </style>
</resources>
